extends layout

block content
  div(class='cover')
    div(class='row' id='welcome')
      p
        b Welcome To GoTogether !
    div(class='row' id='auth')
      div(class="col-sm-offset-4 col-sm-4 col-md-offset-3 col-md-2")
           button(class="btn login" onclick="showLoginPanel()") Login
      div(class="col-sm-offset-4 col-sm-4 col-md-offset-2 col-md-2")
           button(class="btn register" onclick="showRegisterPanel()") Register

  div(class='panel panel-default col-sm-4 col-sm-offset-4 loginpanel')
    div(class='panel-heading')
      div(class='panel-title')
        b User Login

    form(class="form-horizontal" role="form" method='PUT' id='loginform')
     div(class="form-group")
        label(for="name" class="col-sm-2 control-label") Name
        div(class="col-sm-10")
           input(type="text" class="form-control" name="name"
              placeholder="name")
     div(class="form-group")
        label(for="image" class="col-sm-2 control-label") Image
        div(class="col-sm-10")
           input(type="text" class="form-control" name="image"
              placeholder="image")
     div(class="form-group")
        label(for="masteries" class="col-sm-2 control-label") Masteries
        div(class="col-sm-10")
           input(type="text" class="form-control" name="masteries"
              placeholder="masteries")


     div(class="form-group")
        div(class="col-sm-4 col-sm-offset-1 ")
           button(type="submit" class="btn btn-success btn-lg") Login

        div(class="col-sm-4 col-sm-offset-2")
           a(class="btn btn-lg btn-default" onclick="hideLoginPanel()") Cancel

  div(class='panel panel-default col-sm-4 col-sm-offset-4 registerpanel')
    div(class='panel-heading')
      div(class='panel-title')
        b User Register

    form(class="form-horizontal" role="form" method='PUT' id='registerform')
     div(class="form-group")
        label(for="name" class="col-sm-2 control-label") Name
        div(class="col-sm-10")
           input(type="text" class="form-control" name="name"
              placeholder="name")
     div(class="form-group")
        label(for="image" class="col-sm-2 control-label") Image
        div(class="col-sm-10")
           input(type="text" class="form-control" name="image"
              placeholder="image")
     div(class="form-group")
        label(for="masteries" class="col-sm-2 control-label") Masteries
        div(class="col-sm-10")
           input(type="text" class="form-control" name="masteries"
              placeholder="masteries")


     div(class="form-group")
        div(class="col-sm-4 col-sm-offset-1")
           button(type="submit" class="btn btn-success btn-lg") Register

        div(class="col-sm-4 col-sm-offset-2")
           a(class="btn btn-lg btn-default" onclick="hideRegisterPanel()") Cancel
  script(src='/javascripts/main.js')

